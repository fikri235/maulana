#include <iostream>
#include <string.h>
using namespace std;

int main() {
  char Ka[60] = "institut bisnis dan informatika kesatuan";
  cout << "kata yang akan dibalikkan dan diubah menjadi huruf kecil adalah : "<<endl<<Ka<<endl;
  int x = strlen(Ka);
  
  cout <<endl<<endl;
  cout << "menjadi : "<<endl;
  for (int z = x - 1; z >= 0; z--) {
    Ka[z]=tolower(Ka[z]);
    cout<<Ka[z];
    
  }

}
